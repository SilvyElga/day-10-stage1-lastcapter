          </div>
        </div>
      </div>
    </div>

    <div class="list-content">
      <h1>MY PROJECT</h1>
  </div>
  <div  class="container-btn-addnewblog">
    {{#if isLogin}}
    <a href="/blog">add new blog</a>
    {{/if}}
  </div>
  <div>
    <div class="card-container" id="contents">
      {{#each blogs}}
      <div class="item-card">
        <img src="../public/asset2/images2.jpg" alt=""/>
        <div class="content-card">
          <a href="/detail/{{this.id}}" target="_blank"><h3>{{this.project}}</h3></a>
              <div class="duration" >{{this.postat}} </div> {{#if this.author.name}} {{this.author.name}}{{else}} - {{/if}}
              <p>{{this.description}}</p>
             
              <div class="checkbox">
                
                {{#if this.node_js}}
                <span style="font-size: 45;"><img src="../public/asset2/nodejs.png" alt=""></span>
                {{/if}}

                {{#if this.react_js}}
                <span style="font-size: 45;"><img src="../public/asset2/atom-symbol.png" alt=""></span>
                {{/if}}

                {{#if this.next_js}}
                <span style="font-size: 45;"><img src="../public/asset2/nextjs_icon_132160.png" alt=""></span>
                {{/if}}

                {{#if this.typescript}}
                <span style="font-size: 45;"><img src="../public/asset2/typescript.png" alt=""></span>
                {{/if}}
                {{!-- <i class="">{{this.nodeJs}}</i>
                <i class="">{{this.reactJs}}</i> --}}
                {{!-- <img src="../public/asset2/nextjs_icon_132160.png"/>
                <img src="../public/asset2/typescript.png"/> --}} 
              </div>
              
             
              <br>
              <div class="btn-group">
                <a href="/edit/{{this.id}}" class="btn-edit">edit</a>
                  <a href="/home-delete/{{this.id}}" class="btn-delete">delete</a>
              </div>
        </div>
      </div>
      {{/each}}
       </div>
    </div>
  </body>
</html>
