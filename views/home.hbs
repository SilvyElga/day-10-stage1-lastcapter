  <body>
    <nav>
      <div class="nav-left">
        <img src="../public/asset2/logo.png" alt="logo" />
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/blog">My Project</a></li>
        </ul>
      </div>
      <div class="nav-right">
        <ul>
          {{#if isLogin}}
          <span>{{user.name}}</span>
          <li><a href="/logout">Logout</a></li>
          {{else}}
          <li><a href="/registrasi">Register</a></li>
          <li><a href="/login">Login</a></li>
          {{/if}}
          
        </ul>
        <span class="contact-me"><a href="/form">Contact Me</a></span>
      </div>
    </nav>

    <div class="main-container">
      <div class="container-content">
        <div class="left-side">
          <h1>Hi Welcome to my hut</h1>
          <p>
